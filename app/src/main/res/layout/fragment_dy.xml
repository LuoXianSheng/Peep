<?xml version="1.0" encoding="utf-8"?>
<com.github.lxs.peep.widget.ScrollableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tl="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical">

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/dy_tab"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tl:tl_bar_color="#ffffff"
        tl:tl_indicator_color="#EC7263"
        tl:tl_indicator_margin_bottom="2dp"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_margin_top="2dp"
        tl:tl_tab_width="80dp"
        tl:tl_textBold="BOTH"/>

    <FrameLayout
        android:id="@+id/dy_layFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</com.github.lxs.peep.widget.ScrollableLayout>